---
import { getCollection } from 'astro:content';

import Main from '../../layouts/main.astro';
import TableOfContents from '../../components/table-of-contents.astro';

export const reports = await getCollection('reports');

export async function getStaticPaths() {
  return reports.map((report) => {
    return {
      params: {
        slug: report.slug,
      },
      props: {
        report,
      },
    };
  });
}

const {
  report,
  report: {
    data: { title },
  },
} = Astro.props;

const { Content, headings } = await report.render();
---

<Main className='prose prose-lg'>
  <section class='block lg:flex gap-16'>
    <aside class='hidden lg:block relative order-2'>
      <div class='fixed'>
        <TableOfContents headings={headings} />
      </div>
    </aside>
    <div class='relative -mt-6 w-full lg:w-9/12'>
      <a class='text-xs uppercase hover:text-brand-text' href='/'>Back</a>
      <h1 class='text-2xl sm:text-4xl font-heading uppercase font-bold mb-4'>{title}</h1>
      <Content />
    </div>
  </section>
</Main>
